@model Warehouse.Models.WarehouseViewModel

<h1>Warehouse Details</h1>

<div class="row mt-4">
    <div class="card">
        <div class="card-body">

            <form method="post" autocomplete="off">
                <!-- Project and Comment Fields -->
                <div class="form-row align-items-end" style="margin-bottom: 20px;">
                    <div class="row">
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-md-6 col-12 mb-3">
                        <label asp-for="warename">Warehouse Name</label>
                        <input asp-for="warename" type="text" name="warename" class="form-control" />
                    </div>

                    <div class="form-group col-md-6 col-12 mb-3">
                        <label asp-for="location">Location</label>
                        <input asp-for="location" type="text" name="location" class="form-control" />
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-md-6 col-12 mb-3">
                        <label asp-for="contact">Contact</label>
                        <input asp-for="contact" type="text" name="contact" class="form-control" />
                    </div>
                </div>

                <div class="text-right mt-3">
                    <button type="submit" class="btn btn-primary ">Save</button>
                </div>
            </form>
        </div>
    </div>

</div>