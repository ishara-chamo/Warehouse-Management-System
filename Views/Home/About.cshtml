@{
    ViewData["Title"] = "About Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<div class="about-container py-5">
    <div class="container about-page">
        <h1 class="text-center text-light fw-bold">About Us</h1>
        <hr class="mb-4 bg-light" />

        <!-- Mission Section -->
        <div class="row align-items-center mb-5">
            <div class="col-md-6">
                <div class="content-box p-4">
                    <h3 class="fw-bold text-success">Our Mission</h3>
                    <p class="lead">
                        At <strong>Warehouse Inventory Management System (WIMS)</strong>, our mission is to revolutionize inventory management by providing
                        a seamless and efficient solution. We empower businesses with real-time insights, enabling them to streamline operations, minimize losses, and maximize productivity.
                    </p>
                    <p>
                        We understand the challenges businesses face when managing warehouses and stock levels.
                        That’s why our system is designed to simplify warehouse operations while ensuring accuracy, security, and ease of use.
                    </p>
                </div>
            </div>
            <div class="col-md-6 text-center">
                <img src="~/images/about2.jpg" class="img-fluid rounded shadow-lg" alt="Mission Image">
            </div>
        </div>

        <!-- Who We Are Section -->
        <div class="row align-items-center mb-5">
            <div class="col-md-6 text-center">
                <img src="~/images/about.jpeg" class="img-fluid rounded shadow-lg" alt="Our Team">
            </div>
            <div class="col-md-6">
                <div class="content-box p-4">
                    <h3 class="fw-bold text-success">Who We Are</h3>
                    <p class="lead">
                        We are a passionate team of software engineers and logistics experts committed to improving inventory management processes.
                        With a deep understanding of supply chain operations, we bring innovative solutions to help businesses track, manage, and optimize their stock.
                    </p>
                    <p>
                        Our expertise spans across <strong>ASP.NET MVC, C#, SQL, and cloud technologies</strong> to develop a robust, scalable, and user-friendly inventory management system.
                    </p>
                </div>
            </div>
        </div>

        <!-- Why Choose Us Section -->
        <div class="row text-center mb-5">
            <div class="col-md-12">
                <h3 class="fw-bold text-light">Why Choose WIMS?</h3>
                <p class="lead text-light">
                    We believe in delivering an exceptional user experience through modern technology and seamless functionality.
                </p>
            </div>
        </div>

        <div class="row text-center">
            <div class="col-md-3">
                <div class="feature-box p-4 border rounded shadow bg-light">
                    <h4 class="fw-bold">🔍 Real-Time Tracking</h4>
                    <p>Monitor inventory status across multiple warehouses in real time.</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="feature-box p-4 border rounded shadow bg-light">
                    <h4 class="fw-bold">🔄 Easy Stock Management</h4>
                    <p>Efficiently add, update, and transfer stock with ease.</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="feature-box p-4 border rounded shadow bg-light">
                    <h4 class="fw-bold">🔐 Secure & Reliable</h4>
                    <p>Built with robust security measures to protect your data.</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="feature-box p-4 border rounded shadow bg-light">
                    <h4 class="fw-bold">📊 Detailed Reports</h4>
                    <p>Generate insightful reports for better decision-making.</p>
                </div>
            </div>
        </div>
    </div>
</div>
