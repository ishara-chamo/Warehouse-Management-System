@{
    ViewBag.Title = "Home";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        background: linear-gradient(to right, #4CAF50, #2E8B57); /* Green Gradient */
        color: white;
    }

    .jumbotron {
        background: rgba(0, 0, 0, 0.6);
        padding: 2rem;
        border-radius: 10px;
    }

    .card {
        background: rgba(255, 255, 255, 0.9);
        color: #333;
        border-radius: 10px;
        transition: transform 0.3s ease-in-out;
    }

        .card:hover {
            transform: scale(1.05);
        }
</style>

<div class="container mt-4">
    <div class="jumbotron text-center">
        <h1 class="display-4">Welcome to Warehouse Inventory Management</h1>
        <p class="lead">Manage your inventory efficiently with real-time tracking and analytics.</p>
        <hr class="my-4">
        <p>Navigate through the system using the menu to manage products, categories, stock movements, and warehouses.</p>
    </div>

    <div class="row">
        <!-- Products -->
        <div class="col-md-3">
            <div class="card shadow">
                <div class="card-body text-center">
                    <h5 class="card-title">Products</h5>
                    <p class="card-text">Add, update, and view all available products.</p>
                    <a href="@Url.Action("Index", "Product")" class="btn btn-primary">Manage Products</a>
                </div>
            </div>
        </div>

        <!-- Categories -->
        <div class="col-md-3">
            <div class="card shadow">
                <div class="card-body text-center">
                    <h5 class="card-title">Categories</h5>
                    <p class="card-text">Organize products by categories.</p>
                    <a href="@Url.Action("Index", "Category")" class="btn btn-info">Manage Categories</a>
                </div>
            </div>
        </div>

        <!-- Stock Movements -->
        <div class="col-md-3">
            <div class="card shadow">
                <div class="card-body text-center">
                    <h5 class="card-title">Stock Movements</h5>
                    <p class="card-text">Track stock transfers and inventory changes.</p>
                    <a href="@Url.Action("Index", "StockMovement")" class="btn btn-success">View Stock Movement</a>
                </div>
            </div>
        </div>

        <!-- Warehouses -->
        <div class="col-md-3">
            <div class="card shadow">
                <div class="card-body text-center">
                    <h5 class="card-title">Warehouses</h5>
                    <p class="card-text">Manage multiple warehouse locations.</p>
                    <a href="@Url.Action("Index", "Warehouse")" class="btn btn-warning">Manage Warehouses</a>
                </div>
            </div>
        </div>
      
    </div>
</div>
