@model Warehouse.Models.StockMovementViewModel

<h1>Stock Details</h1>

<div class="row mt-4">
    <div class="card">
        <div class="card-body">

            <form method="post" autocomplete="off">
                <!-- Project and Comment Fields -->
                <div class="form-row align-items-end" style="margin-bottom: 20px;">
                    <div class="row">


                        <div class="row">
                            <div class="form-group col-md-6 col-12 mb-3">
                                <label asp-for="productid">Product ID</label>
                                <select asp-for="productid" id="productid" name="productid" class="form-control">
                                    <option value="">Select Product ID</option>
                                    @if (ViewBag.Pro != null)
                                    {
                                        @foreach (var pro in ViewBag.Pro as IEnumerable<SelectListItem>)
                                        {
                                            <option value="@pro.Value">@pro.Text</option>
                                        }
                                    }
                                    else
                                    {
                                        <option value="">No Products Available</option>
                                    }

                                </select>
                            </div>
                            <div class="form-group col-md-6 col-12 mb-3">
                                <label asp-for="fromwarehouseid">From Warehouse ID</label>
                                <input asp-for="fromwarehouseid" type="text" name="fromwarehouseid" class="form-control" />
                            </div>
                        </div>


                        <div class="row">
                            <div class="form-group col-md-6 col-12 mb-3">
                                <label asp-for="towarehouseid">To Warehouse ID</label>
                                <input asp-for="towarehouseid" type="text" name="towarehouseid" class="form-control" />
                            </div>

                            <div class="form-group col-md-6 col-12 mb-3">
                                <label asp-for="quantity">Quantity</label>
                                <input asp-for="quantity" type="number" name="quantity" class="form-control" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-md-6 col-12 mb-3">
                                <label asp-for="date">Date</label>
                                <input asp-for="date" type="date" name="date" class="form-control" />
                            </div>
                        </div>

                        <div class="text-right mt-3">
                            <button type="submit" class="btn btn-primary ">Save</button>
                        </div>

            </form>
        </div>
    </div>
</div>
