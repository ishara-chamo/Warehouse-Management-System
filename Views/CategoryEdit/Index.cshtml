@model Warehouse.Models.CategoryViewModel

<h1>Category Details</h1>

<div class="row mt-4">
    <div class="card">
        <div class="card-body">

            <form method="post" autocomplete="off">
                <!-- Project and Comment Fields -->
                <div class="form-row align-items-end" style="margin-bottom: 20px;">
                    <div class="row">
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-md-6 col-12 mb-3">
                        <label asp-for="CategoryName">Category Name</label>
                        <input asp-for="CategoryName" type="text" name="CategoryName" class="form-control" />
                    </div>

                    <div class="form-group col-md-6 col-12 mb-3">
                        <label asp-for="CategoryDescription">Category Description</label>
                        <input asp-for="CategoryDescription" type="text" name="CategoryDescription" class="form-control" />
                    </div>
                </div>

                <div class="text-right mt-3">
                    <button type="submit" class="btn btn-primary ">Save</button>
                </div>
            </form>
        </div>
    </div>

</div>