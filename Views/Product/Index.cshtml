@model Warehouse.Models.ProductViewModel

<h1>Product Details</h1>

<div class="row mt-4">
    <div class="card">
        <div class="card-body">

            <form method="post" autocomplete="off">
                <!-- Project and Comment Fields -->
                <div class="form-row align-items-end" style="margin-bottom: 20px;">
                    <div class="row">


                        <div class="row">
                            <div class="form-group col-md-6 col-12 mb-3">
                                <label asp-for="productname">Product Name</label>
                                <input asp-for="productname" type="text" name="productname" class="form-control" />
                            </div>
                            <div class="form-group col-md-6 col-12 mb-3">
                                <label asp-for="productdescription">Product Description</label>
                                <input asp-for="productdescription" type="text" name="productdescription" class="form-control" />
                            </div>
                        </div>


                        <div class="row">
                            <div class="form-group col-md-6 col-12 mb-3">
                                <label asp-for="cateid">Category ID</label>
                                <select asp-for="cateid" id="cateid" name="cateid" class="form-control">
                                    <option value="">Select Category ID</option>
                                    @if (ViewBag.Cate != null)
                                    {
                                        @foreach (var cate in ViewBag.Cate as IEnumerable<SelectListItem>)
                                        {
                                            <option value="@cate.Value">@cate.Text</option>
                                        }
                                    }
                                    else
                                    {
                                        <option value="">No Categories Available</option>
                                    }

                                </select>
                            </div>

                            <div class="form-group col-md-6 col-12 mb-3">
                                <label asp-for="price">Price</label>
                                <input asp-for="price" type="decimal" name="price" class="form-control" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-md-6 col-12 mb-3">
                                <label asp-for="quantity">Quantity</label>
                                <input asp-for="quantity" type="number" name="quantity" class="form-control" />
                            </div>
                        </div>

                        <div class="text-right mt-3">
                            <button type="submit" class="btn btn-primary ">Save</button>
                        </div>

            </form>
        </div>
    </div>
</div>
