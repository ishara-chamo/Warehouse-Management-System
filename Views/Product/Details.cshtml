@model Warehouse.Models.ProductViewModel


<h4 class="py-3 mb-4"><span class="text-muted fw-light">Product/</span> Details</h4>

<div class="row">
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-body">
                <dl class="row mb-0">

                    <dt class="col-sm-3">
                        Product Name
                    </dt>
                    <dd class="col-sm-9">
                        @Model.productname
                    </dd>

                    <dt class="col-sm-3">
                        Product Description
                    </dt>
                    <dd class="col-sm-9">
                        @Model.productdescription
                    </dd>

                    <dt class="col-sm-3">
                        Category ID
                    </dt>
                    <dd class="col-sm-9">
                        @Model.cateid
                    </dd>

                    <dt class="col-sm-3">
                        Price
                    </dt>
                    <dd class="col-sm-9">
                        @Model.price
                    </dd>

                    <dt class="col-sm-3">
                        Quantity
                    </dt>
                    <dd class="col-sm-9">
                        @Model.quantity
                    </dd>




                </dl>
            </div>
        </div>
    </div>
</div>